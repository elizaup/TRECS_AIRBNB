<h2> <strong> Upcoming rentals </strong> 🧢 </h2>

<div>
  <table class="table table-striped">
    <thead>
    <tr>
      <th scope="col">Start Date</th>
      <th scope="col">End Date</th>
      <th scope="col"> ❌ </th>
    </tr>
    </thead>
    <tbody>
      <% @rentals.each do |rental| %>
        <tr>
          <td><%= rental.start_date %></td>
          <td><%= rental.end_date %></td>
          <td> <%= link_to "Cancel", rental_path(rental), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
