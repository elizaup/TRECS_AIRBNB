<div class="container mt-2"> <%# Page title container %>
  <div class="row"> <%# Row 1 of 2 %>
    <div class="container"> <%# h1 to take up half page %>
      <h1><%= @item.name %></h1>
    </div>
  </div>
  <div class="container"> <%# Row 2 of 2 %>
    <h3>
     <%= link_to "User Profile", @user, class: "btn btn-outline-primary" %>
    </h3>
  </div>
</div>

<div class="container mt-3">
    <!-- IMAGE -->
    <%= image_tag "#{rand(1..6)}.jpg", class: "rounded float-left" %>
    <!-- DETAILS -->
    <ul>
    <br>
      <li>
        <p class="card-text">
          <% if @item.available == true %>
            <%= "AVAILABLE" %>
          <% end %>
          <% if @item.available == false %>
            <%= "UNAVAILABLE" %>
          <% end %>
        </p>
      </li>
      <li>
        <p class="card-text">Price: â‚¬<%= @item.price %></p>
      </li>
      <li>
        <p class="card-text">Category: <%= @item.category %></p>
      </li>
      <li>
        <p class="card-text">Brand: <%= @item.brand %></p>
      </li>
    </ul>

    <!-- LINK TO EDIT LISTING -->
    <div>
      <% if policy(@item).edit? %>
        <%= link_to "Edit Listing", edit_item_path(@item), class: "ms-3 text-muted" %>
      <% end %>
    </div>

    <!-- LINK TO DELETE LISTING -->
    <div>
      <% if policy(@item).destroy? %>
        <%= link_to "Remove Listing", item_path(@item), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "ms-3 text-muted" %>
      <% end %>
    </div>
</div>

<!-- # LINK TO RENTAL FORM -->
<div>
  <%# link_to "Rental Request Form", new_item_rentals_path(@item), class: "btn btn-outline-primary" %>
</div>

<!-- # LINK TO HOME -->
<div class="mx-auto" style="width: 200px;">
  <%= link_to "Home Page", root_path(@item), class: "btn btn-outline-primary" %>
</div>
