<h1>Welcome!</h1>
<div class="container">
  <% @items.each do |item| %>
	  <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= item["name"]%> </h5>
        <ul>
          <li>
	          <p class="card-text"><%= item["price"]%></p>
          </li>
          <li>
	          <p class="card-text"><%= item["category"]%></p>
          </li>
          <li>
            <p class="card-text"><%= item["brand"]%></p>
          </li>
        </ul>
        <a href="#" class="btn btn-primary">See more</a>
      </div>
    </div>
  <% end %>
</div>










