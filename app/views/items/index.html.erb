            <h5 class="card-title"><%= item["name"]%> </h5>
            <ul>
              <li>€<%= item["price"]%>  -  </li>
              <li><%= item["category"]%>  -  </li>
              <li><%= item["brand"]%></li>
            </ul>

            <%= link_to "See more", item_path(item), class: "btn btn-outline-secondary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>








