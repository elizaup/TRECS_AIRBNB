<div class= "row justify-content-center g-5 row-cols-4"> <%# Row 2 of 2 added justify-content-center%>
    <% @items.each do |item| %>
      <div class="col"> <%# added mb-4%>
      <%# cards to take up 1/3 for medium+ devices and all space for small devices %>
        <%# div class="card h-100"%>
        <div class="card card-index" style="height: 100%;">
        <%= image_tag "#{rand(1..6)}.jpg", class: "card-img-top" %>
        <%# image_tag "#{rand(1..6)}.jpg", class: "card-img-top" %>
        <%# '.;img src="assets/images/homepage/1.jpg" class="card-img-top" #{rand(1..6)}%>
